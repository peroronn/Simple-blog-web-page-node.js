<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Microblogger: Author blog</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Welcome</h1>
            <a href="/" class="settings-link">Back to Home</a>
        </div>
    </header>
    <main>
        <section class="blogs">
            <h2>Your Blogs</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% blogs.forEach(blog => { %>
                        <tr>
                            <td><%= blog.BlogTitle %></td>
                            <td><%= blog.BlogSubTitle %></td>
                            <td><%= blog.DateCreated %></td>
                            <td>
                                <form action="/author/Home" method="GET" style="display:inline;">
                                    <input type="hidden" name="blogID" value="<%= blog.BlogID %>">
                                    <button type="submit">View Blog</button>
                                </form>
                                <form action="/blog/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this blog?');">
                                    <input type="hidden" name="blogID" value="<%= blog.BlogID %>">
                                    <input type="hidden" name="userID" value="<%= userID %>">
                                    <button type="submit">Delete</button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <form action="/blog/create" method="GET">
                <input type="hidden" name="userID" value="<%= userID %>">
                <button type="submit" >Create Blog</button>
            </form>
    </main>
</body>
</html>