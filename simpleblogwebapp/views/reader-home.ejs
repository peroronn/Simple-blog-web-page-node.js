<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Microblogger: Reader Homepage</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Microblogger: Reader Homepage</h1>
            <a href="/" class="settings-link">Back to Home</a>
        </div>
    </header>
    <main>
        <section class="articles">            
            <div class="published-articles">
                <h2>Published Articles</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Author Name</th>
                            <th>Published Date</th>
                            <th>Views</th> 
                            <th>Likes</th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% publishedArticles.forEach(article => { %>
                            <tr>
                                <td><%= article.ArticleTitle %></td>
                                <td><%= article.ArticleSubtitle %></td>
                                <td><%= article.UserName %></td>
                                <td><%= article.DatePublished %></td>
                                <td><%= article.NoOfViews %></td> 
                                <td><%= article.NoOfLikes %></td>
                                <td class="actions">
                                  <form action="/reader/view" method="GET" style="display:inline;" onsubmit="return confirm('Are you sure you want to view this article?');">
                                    <input type="hidden" name="articleID" value="<%= article.ArticleID %>">
                                    <button type="submit">View</button>
                                  </form>                                
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html> 